<!-- search bar -->
<div class='container search-bar'>
  <div class='search-bar-outer'>
    <div class='search-bar-inner'>
      <h4 class='mb-2'>尋找餐廳：</h4>
      <form action='/search'>
        <div class='d-flex flex-column flex-sm-row align-items-sm-center gap-2'>
          <div class='input-group mb-2 mb-sm-0 mr-sm-2'>
            <input
              type='text'
              name='keyword'
              value='{{keyword}}'
              class='form-control'
              placeholder='輸入餐廳、分類'
              aria-label='Restaurant Name...'
              value=''
              aria-describedby='search-button'
            />
            <button class='btn btn-major' type='submit' id='search-button'><i
                class='fas fa-search'
              ></i></button>
          </div>
          <div class='input-group'>
            <select class='form-select' id='sort' name='sort'>
              <option selected>
                {{#if sort}}
                  {{sort}}
                {{else}}
                  排序 Sort
                {{/if}}
              </option>
              <option>A > Z</option>
              <option>Z > A</option>
              <option>類別</option>
              <option>地區</option>
            </select>
          </div>
        </div>
        <div class='mt-2'>
          <a
            class='btn btn-success'
            href='/restaurants/new'
            role='button'
          >新增餐廳 Add</a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-10 col-12 mx-auto'>
      <div class='row row-cols-1 row-cols-sm-3'>
        {{#each restaurants}}
          <div class='col'>
            <div class='card mb-1'>
              <img
                class='card-img-top'
                src='{{this.image}}'
                alt='{{this.name}}'
              />
              <div class='card-body p-3'>
                <h6 class='card-title mb-1 text-secondary'>{{this.name}}</h6>
                <div class='restaurant-category mb-1'>
                  <i class='fas fa-utensils pr-2'></i>
                  {{this.category}}
                </div>
                <span class='badge rounded-pill text-bg-danger'>
                  {{this.rating}}
                  <i class='fas fa-star fa-xs'></i>
                </span>
              </div>
              <div class='card-footer d-flex justify-content-center flex-wrap'>
                <a href='/restaurants/{{this._id}}'><button
                    class='btn btn-primary btn-sm ms-2'
                  >Details</button></a>
                <a href='/restaurants/{{this._id}}/edit'><button
                    class='btn btn-primary btn-sm ms-2'
                  >Edit</button></a>
                <form action='/restaurants/{{this._id}}/delete' method='GET'>
                  <button
                    type='submit'
                    class='btn btn-danger btn-sm text-white ms-2'
                  >Delete</button>
                </form>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>