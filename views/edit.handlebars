<h1 class='mb-1 restaurant-show-title'>編輯餐廳 - {{restaurant.name}}</h1>
<div class='container'>
  <form action='/restaurants/{{restaurant._id}}?_method=PUT' method='POST'>

    <div class='mb-3'>
      <label for='name' class='form-label'>店名 Store name<span
          class='text-danger'
        >*</span></label>
      <input
        type='text'
        class='form-control'
        id='name'
        placeholder='店名'
        name='name'
        value='{{restaurant.name}}'
        required
      />
    </div>

    <div class='mb-3'>
      <label for='name_en' class='form-label'>英文店名 English store name<span
          class='text-danger'
        >*</span></label>
      <input
        type='text'
        class='form-control'
        id='name_en'
        placeholder='Store name'
        name='name_en'
        value='{{restaurant.name_en}}'
        required
      />
    </div>

    <div class='mb-3'>
      <label for='category' class='form-label'>類別 Category<span
          class='text-danger'
        >*</span></label>
      <input
        type='text'
        class='form-control'
        id='category'
        placeholder='Category'
        list='categoryOptions'
        name='category'
        value='{{restaurant.category}}'
        required
      />
      {{! 使用datalist，讓使用者可選擇或自行輸入 }}
      <datalist id='categoryOptions'>
        <option>美式 American style</option>
        <option>咖啡 Coffee</option>
        <option>酒吧 Bar</option>
        <option>中東料理 Middle Eastern Cuisine</option>
        <option>日本料理 Japanese Cuisine</option>
        <option>義式餐廳 Italian Cuisine</option>
      </datalist>
    </div>

    <div class='mb-3'>
      <label for='image' class='form-label'>圖片連結 Image Link<span
          class='text-danger'
        >*</span></label>
      <input
        type='url'
        class='form-control'
        id='image'
        name='image'
        value='{{restaurant.image}}'
        required
      />
    </div>

    <div class='mb-3'>
      <label for='location' class='form-label'>地址 Location<span
          class='text-danger'
        >*</span></label>
      <input
        type='text'
        class='form-control'
        id='location'
        placeholder='XX市XX區XXX路XXX號'
        name='location'
        value='{{restaurant.location}}'
        required
      />
    </div>

    <div class='mb-3'>
      <label for='phone' class='form-label'>電話 Phone<span
          class='text-danger'
        >*</span></label>
      <input
        type='tel'
        class='form-control'
        id='phone'
        placeholder='01-23456789'
        name='phone'
        value='{{restaurant.phone}}'
        required
      />
    </div>

    <div class='mb-3'>
      <label for='google_map' class='form-label'>Google地圖連結 Map Link<span
          class='text-danger'
        >*</span></label>
      <input
        type='url'
        class='form-control'
        id='google_map'
        name='google_map'
        value='{{restaurant.google_map}}'
        required
      />
    </div>

    <div class='mb-3'>
      <label for='rating' class='form-label'>評分 Rating<span
          class='text-danger'
        >*</span></label>
      <input
        type='number'
        class='form-control'
        id='rating'
        placeholder='0.0 ~ 5'
        min='0'
        max='5'
        step='0.1'
        name='rating'
        value='{{restaurant.rating}}'
        required
      />
    </div>

    <div class='mb-3'>
      <label for='description' class='form-label'>敘述 Description<span
          class='text-danger'
        >*</span></label>
      <textarea
        class='form-control'
        id='description'
        rows='3'
        name='description'
        required
      >{{restaurant.description}}</textarea>
    </div>

    <div class='text-center'>

      <button type='submit' class='btn btn-outline-primary'>
        儲存 Save
      </button>

      <a href='/'>
        <button type='button' class='btn btn-outline-secondary'>
          返回首頁 Index
        </button>
      </a>

    </div>

  </form>
</div>